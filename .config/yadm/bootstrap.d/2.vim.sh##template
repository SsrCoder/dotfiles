#!/bin/sh

install_neovim() {
{% if yadm.distro_family == "debian" %}
	if ! command -v nvim >/dev/null 2>&1; then
		echo "Installing nvim"
		sudo add-apt-repository ppa:neovim-ppa/unstable
		sudo apt-get update
		sudo apt-get install -y neovim
	fi
{% endif %}
{% if yadm.os == "Darwin" %}
	# do not need install here, it has installed by homebrew
{% endif %}
}

config_neovim() {
	if [[ "grep -rn 'packer.startup' $XDG_CONFIG_HOME/nvim" != "" ]]; then
		echo "Bootstrapping nvim plugins with packer"
		nvim --headless -c 'autocmd User PackerComplete quitall' -c 'PackerSync'
	elif [[ "grep -rn 'call plug#begin' $XDG_CONFIG_HOME/nvim" != "" ]]; then
		echo "Bootstrapping nvim plugins with plug"
		nvim --headless -c 'PlugInstall --sync' -c 'qa'
	fi
}

install_neovim
config_neovim
